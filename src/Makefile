CC = gcc
OPT_CFLAGS = -O2 -pipe
CFLAGS = -W -Wall -Werror $(OPT_CFLAGS)
LEX = flex
# "--nounput" is for a cleaner compilation, but not all versions of flex support
# it
LFLAGS = --nounput -X -Cr -DYY_NO_INPUT
# this version is more compatible because not all system have a wrapper script
YACC = bison -y
YFLAGS = -v -d
OBJ_FILES = y.tab.o lex.yy.o execute.o misc.o main.o sig.o
LIBS = -lfl

all:	shell

y.tab.c:	parser.y
		$(YACC) $(YFLAGS) -o $@ -d $<

lex.yy.c:	lexer.l y.tab.c
		$(LEX) $(LFLAGS) --header-file=$*.h -o $@ $<

%.o:	%.c
	$(CC) $(CFLAGS) -o $@ -c $<

shell:		$(OBJ_FILES)
		$(CC) $(CFLAGS) -o $@ $(OBJ_FILES) $(LIBS)

clean:
	$(RM) shell y.tab.* lex.yy.* *.o *.d y.output

.PHONY: all clean

# generated by "makedepend -Y./ *.c 2> /dev/null
# DO NOT DELETE

execute.o: execute.h misc.h
main.o: execute.h parser.h sig.h
misc.o: misc.h
sig.o: execute.h misc.h sig.h
